<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjectDraft.Views.JobOfferPage"
             Title="">

    <Grid RowDefinitions="*, Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout
            VerticalOptions="Start"
            Padding="30,0,30,100"
            Spacing="25">

                <HorizontalStackLayout HorizontalOptions="Center" Margin="0,30,0,-10">
                    <Label 
                    Margin="0,0,0,0"
                    Text="HEAD"
                    FontSize="44"
                    FontFamily="LilitaOne"
                    FontAttributes="None"
                    TextColor="{StaticResource LogoGreen}"
                    />

                    <Image 
                    Source="headstarter_logo2.png"
                    HeightRequest="38"
                    Aspect="AspectFit"/>

                    <Label 
                    Margin="0,0,0,0"
                    Text="TARTER"
                    FontSize="44"
                    FontFamily="LilitaOne"
                    FontAttributes="None"
                    TextColor="{StaticResource LogoOrange}"
                    />
                </HorizontalStackLayout>

                <VerticalStackLayout Spacing="20" Margin="0,20,0,0">
                        <Label                            
                        Text="Borislavia Inc" 
                        HorizontalOptions="Fill"  
                        HorizontalTextAlignment="Center"
                        HeightRequest="100"
                        WidthRequest="400"
                        VerticalTextAlignment="Center"
                        
                        FontSize="35"
                        FontFamily="Boldnose"
                        FontAttributes="Bold"
                        BackgroundColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}"
                        TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}"/>

                        <Frame 
                            Margin="0,10,0,0"
                            x:Name="CompanyLogo"                                
                            HeightRequest="135" WidthRequest="275"
                            CornerRadius="30"
                            BorderColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}"
                            BackgroundColor="Transparent"
                            Padding="0">
                            <Image
                                Source="image1.png"
                                Aspect="AspectFit"></Image>
                        </Frame>

                        <HorizontalStackLayout Spacing="10" Padding="0,0" Margin="10,0,0,0">
                            <Label 
                                Margin="0,0,0,0"
                                FontFamily="icons"
                                TextColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}" FontSize="25"
                                Text="{StaticResource IconMapMarker}"
                                BackgroundColor="Transparent">
                                
                            </Label>
                            <Label                               
                                Margin="0,0,0,0"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Start"
                                Text="Sofia, Aleksandar Malinov Boulevard 79В, Office No12"
                                LineBreakMode="WordWrap"
                                WidthRequest="250"
                                MaxLines="2"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10" Margin="10,-10,0,0" Padding="0,0">
                        <Label 
                                Margin="0,0,0,0"
                                FontFamily="icons"
                                TextColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}" FontSize="25"
                                Text="{StaticResource IconClock}"
                                BackgroundColor="Transparent">
                        </Label>
                            <Label                               
                                Margin="0,0,0,0"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Start"
                                Text="Член на HEADSTARTER от 22:39:46 01-03-2025"
                                LineBreakMode="WordWrap"
                                WidthRequest="250"
                                MaxLines="2"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10" Margin="10,-10,0,0" Padding="0,0">
                        <Label 
                                Margin="0,0,0,0"
                                FontFamily="icons"
                                TextColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}" FontSize="25"
                                Text="{StaticResource IconLink}"
                                BackgroundColor="Transparent">
                        </Label>
                            <Label                               
                                Margin="0,0,0,0"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Start"
                                Text="https://www.sap.com/bulgaria/index.html"
                                LineBreakMode="WordWrap"
                                WidthRequest="250"
                                MaxLines="2"/>
                        </HorizontalStackLayout>

                        <Label
                            HorizontalOptions="Center"
                            Text="Описание на фирмата:"
                            FontSize="18">
                        </Label>
                        <Label Padding="10,0,10,15"
                            Text="In a world where time moves fast, we seek moments that last. A smile, a kind word, or a shared laugh can make all the difference. Life is a journey, full of surprises and lessons. Embrace each day with hope, cherish loved ones, and never stop dreaming. The best stories are yet to be written aaaaaaa.">
                        </Label>
                    </VerticalStackLayout>
                    

                <BoxView 
                    Margin="0,0,0,0" 
                    WidthRequest="325" 
                    HeightRequest="1" 
                    BackgroundColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}"
                    VerticalOptions="Center"/>

                <Label
                    Text="Обяви за работа:"
                    HorizontalOptions="Center"
                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                    FontSize="30">
                </Label>

                <Frame Margin="0,10,0,0" Padding="0,0,0,0" WidthRequest="325" HeightRequest="150" CornerRadius="30" BackgroundColor="Transparent" BorderColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}" >
                    <StackLayout>
                        <Label     
                            Margin="15,10,0,0"
                            Text="Junior Software Developer"
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                            FontAttributes="Bold"
                            FontSize="18">
                        </Label>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,5,0,0"
                                Text="Ниво:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,5,0,0"
                                Text="Entry"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,0,0,0"
                                Text="Години опит:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,0,0,0"
                                Text="0 - 2"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,0,0,0"
                                Text="Място:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,0,0,0"
                                Text="София"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,0,0,0"
                                Text="Заетост:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,0,0,0"
                                Text="8 часа"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>

                        <Button
                            HorizontalOptions="Center"
                            Text="Виж"
                            FontSize="16"
                            TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}"
                            CornerRadius="50"
                            BackgroundColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}"
                            WidthRequest="100"
                            HeightRequest="50"
                            Margin="170,-50,0,0">
                        </Button>
                    </StackLayout>
                </Frame>
                <Frame Margin="0,10,0,0" Padding="0,0,0,0" WidthRequest="325" HeightRequest="160" CornerRadius="30" BackgroundColor="Transparent" BorderColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}" >
                    <StackLayout>
                        <Label     
                            Margin="15,10,0,0"
                            Text="Senior Software Developer"
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                            FontAttributes="Bold"
                            FontSize="18">
                        </Label>
                        <VerticalStackLayout Spacing="0">
                            <HorizontalStackLayout Spacing="10">
                                <Label   
                                    Margin="15,5,0,0"
                                    Text="Ниво:"
                                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                    FontAttributes="Bold"
                                    FontSize="16">
                                </Label>
                                <Label
                                    Margin="0,5,0,0"
                                    Text="Entry"
                                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                    FontSize="16">
                                </Label>
                
                                <Label   

                                    Margin="15,5,0,0"
                                    Text="Години опит:"
                                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                    FontAttributes="Bold"
                                    FontSize="16">
                                </Label>
                                <Label
                                    Margin="0,5,0,0"
                                    Text="0 - 2"
                                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                     FontSize="16">
                                </Label>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="10">
                                <Label   
                                    Margin="15,0,0,0"
                                    Text="Място:"
                                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                    FontAttributes="Bold"
                                    FontSize="16">
                                </Label>
                                <Label
                                    Margin="0,0,0,0"
                                    Text="София"
                                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                    FontSize="16">
                                </Label>

                                <Label   
                                    Margin="15,0,0,0"
                                    Text="Заетост:"
                                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                    FontAttributes="Bold"
                                    FontSize="16">
                                </Label>
                                <Label
                                    Margin="0,0,0,0"
                                    Text="8 часа"
                                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                    FontSize="16">
                                </Label>
                            </HorizontalStackLayout>
                            <Button
                                Margin="0,10,0,0"
                                Text="Виж повече"
                                TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}"
                                CornerRadius="50"
                                BackgroundColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}"
                                WidthRequest="150"
                                HeightRequest="50"
                                FontSize="16"
                                FontAttributes="Bold"
                                >
                            </Button>


                        </VerticalStackLayout>
                        

                        
                    </StackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>