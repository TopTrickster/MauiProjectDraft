<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjectDraft.Views.MainPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">

    <Grid RowDefinitions="*, Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout
                VerticalOptions="Start"
                Padding="30,0,30,0"
                Spacing="25">

                <HorizontalStackLayout HorizontalOptions="Center" Margin="0,30,0,-10">
                    <Label 
                        Text="HEAD"
                        FontSize="44"
                        FontFamily="LilitaOne"
                        TextColor="{StaticResource LogoGreen}" />

                    <Image 
                        Source="headstarter_logo2.png"
                        HeightRequest="38"
                        Aspect="AspectFit"/>

                    <Label 
                        Text="TARTER"
                        FontSize="44"
                        FontFamily="LilitaOne"
                        TextColor="{StaticResource LogoOrange}" />
                </HorizontalStackLayout>

                <Image
                    HorizontalOptions="Center"
                    Source="headstarter_picture.png"
                    HeightRequest="240"               
                    Aspect="AspectFit"
                    SemanticProperties.Description="Main page image" />

                <Label   
                    Margin="0,20,0,0"
                    Text="Намери своя талант"
                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                    FontSize="30"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"/>


                <Frame Margin="0,0,0,0" CornerRadius="50" WidthRequest="325" HeightRequest="90" BorderColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}">
                    <SearchBar x:Name="SearchBar" TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                </Frame>


                <BoxView 
                    Margin="0,20"
                    WidthRequest="325" 
                    HeightRequest="1" 
                    BackgroundColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}"
                    VerticalOptions="Center"/>

                <Label                   
                    Text="Най-новите обяви"
                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                    FontSize="30"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"/>


                <Frame Margin="0,10,0,0" Padding="0,0,0,0" WidthRequest="325" HeightRequest="170" CornerRadius="30" BackgroundColor="Transparent" BorderColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}" >
                    <StackLayout>
                        <Label     
                            Margin="15,10,0,0"
                            Text="Junior Software Developer"
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                            FontAttributes="Bold"
                            FontSize="18">
                        </Label>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,5,0,0"
                                Text="Ниво:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,5,0,0"
                                Text="Entry"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,0,0,0"
                                Text="Години опит:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,0,0,0"
                                Text="0 - 2"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,0,0,0"
                                Text="Място:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,0,0,0"
                                Text="София"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,0,0,0"
                                Text="Заетост:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,0,0,0"
                                Text="8 часа"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,0,0,0"
                                Text="Режим:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,0,0,0"
                                Text="Присъствен"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>

                        <Button
                            HorizontalOptions="End"
                            Text="Виж"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}"
                            CornerRadius="50"
                            BackgroundColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}"
                            WidthRequest="100"
                            HeightRequest="50"
                            Margin="0,-45,10,0">
                        </Button>
                    </StackLayout>
                </Frame>

                <Frame Margin="0,10,0,0" Padding="0,0,0,0" WidthRequest="325" HeightRequest="170" CornerRadius="30" BackgroundColor="Transparent" BorderColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}" >
                    <StackLayout>
                        <Label     
                            Margin="15,10,0,0"
                            Text="Junior Software Developer"
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                            FontAttributes="Bold"
                            FontSize="18">
                        </Label>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,5,0,0"
                                Text="Ниво:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,5,0,0"
                                Text="Entry"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,0,0,0"
                                Text="Години опит:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,0,0,0"
                                Text="0 - 2"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,0,0,0"
                                Text="Място:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,0,0,0"
                                Text="София"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,0,0,0"
                                Text="Заетост:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,0,0,0"
                                Text="8 часа"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="10">
                            <Label   
                                Margin="15,0,0,0"
                                Text="Режим:"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontAttributes="Bold"
                                FontSize="16">
                            </Label>
                            <Label
                                Margin="0,0,0,0"
                                Text="Присъствен"
                                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Gray100}}"
                                FontSize="16">
                            </Label>
                        </HorizontalStackLayout>

                        <Button
                            HorizontalOptions="End"
                            Text="Виж"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}"
                            CornerRadius="50"
                            BackgroundColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}"
                            WidthRequest="100"
                            HeightRequest="50"
                            Margin="0,-45,10,0">
                        </Button>
                    </StackLayout>
                </Frame>

                <Grid Margin="-30,50,-30,0" Padding="0,50"
                      BackgroundColor="{AppThemeBinding Light={StaticResource LogoPurple}, Dark={StaticResource LogoOrange}}">
                    <VerticalStackLayout Spacing="25">

                        <Label
                            Padding="0,0,0,10"
                            HorizontalOptions="Center"
                            Text="ЗА НАС"
                            TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}"
                            FontSize="20"
                            FontAttributes="Bold" />

                        <Frame
                            Padding="0"
                            HasShadow="False"
                            BackgroundColor="Transparent"
                            BorderColor="Transparent"
                            CornerRadius="12">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAboutUsTapped" />
                            </Frame.GestureRecognizers>

                            <HorizontalStackLayout
                                Spacing="5"
                                Padding="30,0">
                                <Label 
                                    FontFamily="icons"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" 
                                    FontSize="25"
                                    Text="{StaticResource IconFaceManShimmer}"
                                    BackgroundColor="Transparent" />
                                <Label
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="Start"
                                    Text="Екип на HEADSTARTER"
                                    FontSize="18"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" />
                            </HorizontalStackLayout>
                        </Frame>

                        <Frame
                            Padding="0"
                            HasShadow="False"
                            BackgroundColor="Transparent"
                            BorderColor="Transparent"
                            CornerRadius="12">
                            <HorizontalStackLayout
                                Spacing="5"
                                Padding="30,0">
                                <Label 
                                    FontFamily="icons"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" 
                                    FontSize="25"
                                    Text="{StaticResource IconHelp}"
                                    BackgroundColor="Transparent" />
                                <Label
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="Start"
                                    Text="Често задавани въпроси"
                                    FontSize="18"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" />
                            </HorizontalStackLayout>
                        </Frame>

                        <BoxView 
                            WidthRequest="325" 
                            HeightRequest="1" 
                            BackgroundColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}"
                            VerticalOptions="Center"/>

                        <Label
                            Padding="0,10,0,10"
                            HorizontalOptions="Center"
                            Text="СВЪРЖИ СЕ С НАС"
                            TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}"
                            FontSize="20"
                            FontAttributes="Bold" />

                        <Frame
                            Padding="0"
                            HasShadow="False"
                            BackgroundColor="Transparent"
                            BorderColor="Transparent"
                            CornerRadius="12">
                            <HorizontalStackLayout
                                Spacing="5"
                                Padding="30,0">
                                <Label 
                                    FontFamily="icons"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" 
                                    FontSize="25"
                                    Text="{StaticResource IconPhone}"
                                    BackgroundColor="Transparent" />
                                <Label
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="Start"
                                    Text="+359 988 329 931"
                                    FontSize="18"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" />
                            </HorizontalStackLayout>
                        </Frame>

                        <Frame
                            Padding="0"
                            HasShadow="False"
                            BackgroundColor="Transparent"
                            BorderColor="Transparent"
                            CornerRadius="12">
                            <HorizontalStackLayout
                                Spacing="5"
                                Padding="30,0">
                                <Label 
                                    FontFamily="icons"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" 
                                    FontSize="25"
                                    Text="{StaticResource IconEmail}"
                                    BackgroundColor="Transparent" />
                                <Label
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="Start"
                                    Text="contact_us@headstarter.eu"
                                    FontSize="18"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" />
                            </HorizontalStackLayout>
                        </Frame>

                        <Frame
                            Padding="0"
                            HasShadow="False"
                            BackgroundColor="Transparent"
                            BorderColor="Transparent"
                            CornerRadius="12">
                            <HorizontalStackLayout
                                Spacing="5"
                                Padding="30,0">
                                <Label 
                                    FontFamily="icons"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" 
                                    FontSize="25"
                                    Text="{StaticResource IconFacebook}"
                                    BackgroundColor="Transparent" />
                                <Label
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="Start"
                                    Text="HEADSTARTER"
                                    FontSize="18"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" />
                            </HorizontalStackLayout>
                        </Frame>

                        <Frame
                            Padding="0"
                            HasShadow="False"
                            BackgroundColor="Transparent"
                            BorderColor="Transparent"
                            CornerRadius="12">
                            <HorizontalStackLayout
                                Spacing="5"
                                Padding="30,0">
                                <Label 
                                    FontFamily="icons"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" 
                                    FontSize="25"
                                    Text="{StaticResource IconInstagram}"
                                    BackgroundColor="Transparent" />
                                <Label
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="Start"
                                    Text="headstarter_company"
                                    FontSize="18"
                                    TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}" />
                            </HorizontalStackLayout>
                        </Frame>

                        <BoxView 
                            WidthRequest="325" 
                            HeightRequest="1" 
                            BackgroundColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}"
                            VerticalOptions="Center"/>

                        <HorizontalStackLayout HorizontalOptions="Center" Margin="0,30,0,0">
                            <Label
                                Text="HEADSTARTER"
                                TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}"
                                FontFamily="LilitaOne"
                                FontSize="25" />
                            <Label
                                Text=" © 2025"
                                TextColor="{AppThemeBinding Light={StaticResource LogoPurpleLight}, Dark={StaticResource Black}}"
                                FontSize="22" />
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
